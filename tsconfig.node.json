{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist-server",
    "rootDir": "./src",
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/server/**/*.ts",
    "src/server/**/*.js",
    "src/server/**/*.tsx",
    "src/common/**/*.ts",
  ],
  "exclude": [
    "src/server/**/*.spec.ts",
    "src/server/**/*.test.ts",
    "src/**/__tests__/**/*",
    "src/__tests__/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/test/**",
    "**/tests/**"
  ]
}